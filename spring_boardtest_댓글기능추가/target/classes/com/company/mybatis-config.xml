<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- TypeAliases: 'com.company.dto.BoardDTO' 클래스를 'board'라는 별칭으로 사용 -->
    <typeAliases>
        <!-- BoardDTO 클래스에 'board'라는 별칭을 지정 -->
        <typeAlias type="com.company.dto.BoardDTO" alias="board"></typeAlias>
        
        <!-- CommentDTO 클래스에 'comment'라는 별칭을 지정 -->
        <typeAlias type="com.company.dto.CommentDTO" alias="comment"></typeAlias>
    </typeAliases>
</configuration>
